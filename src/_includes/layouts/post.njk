---
layout: default
---

<div class="container">
  <article class="post">
    <header class="post-header">
      <h1>{{ title }}</h1>
      {% if page.date %}
      <time class="text-mono text-sm text-secondary">{{ page.date | readableDate }}</time>
      {% endif %}
    </header>

    <div class="post-content">
      {{ content | safe }}
    </div>

    <footer class="post-footer">
      <nav class="post-nav">
        <a href="/blog" class="btn">← Back to Blog</a>
      </nav>
    </footer>
  </article>
</div>