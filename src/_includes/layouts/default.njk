<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{{ metaTitle }}</title>
        <meta name="title" content="{{ metaTitle }}">
        <meta name="description" content="{{ metaDesc }}">
        <meta name="author" content="{{ author.name }}">
        <meta name="robots" content="index, follow">
        <link rel="canonical" href="{{ site.url | url }}{{ page.url }}">
        <link rel="shortcut icon" type="image/png" href="{{ '/assets/img/favicon.png' | url }}">
        <link rel="apple-touch-icon" href="{{ '/assets/img/apple-touch-icon.png' | url }}">
        <link rel="dns-prefetch" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="dns-prefetch" href="https://fonts.gstatic.com">
        <link rel="preconnect" href="https://fonts.gstatic.com">
        <link href="https://fonts.googleapis.com/css2?family=Caveat+Brush&display=swap" rel="stylesheet"> 
        <link rel="stylesheet" href="{{ '/assets/css/styles.css' | url }}">
    </head>	
    <body {% if body_class %}id="{{ body_class }}" {% endif %}class="flex flex-col h-screen bg-sitebg text-gray-100 text-base font-sans break-words">
        <div class="max-w-5xl w-full mx-auto px-2 flex-grow">
            {% include "partials/header.njk" %}
            <main>
                {% if layout === "post" %}
                {{ content | safe }}
                {% else %}
                {{ content | safe }}
                {% endif %}
            </main>
            {% include "partials/footer.njk" %}
        </div>
        <script src="{{ '/assets/js/bundle.js' | url }}"></script>
        {% if highlightjs %}
        <script src="//cdnjs.cloudflare.com/ajax/libs/highlight.js/10.7.2/highlight.min.js"></script>
        <script>hljs.initHighlightingOnLoad();</script>
        {% endif %}
        {% if roughjs %}
        <script src="https://unpkg.com/rough-notation/lib/rough-notation.iife.js"></script>
        <script>
        setTimeout(function () {
            const annotate = RoughNotation.annotate;
            const annotationGroup = RoughNotation.annotationGroup;
            const $ = (t) => document.querySelector(t);
            {
                const a1 = annotate($('.box-blue'), { type: 'box', color: '#3BC9DB', animationDuration: 500 });
                const a2 = annotate($('.box-green'), { type: 'box', color: '#059669', animationDuration: 500 });
                const a3 = annotate($('.box-red'), { type: 'box', color: '#B91C1C', animationDuration: 500 });
                const a4 = annotate($('.underline-gray'), { type: 'underline', color: '#475569', animationDuration: 500, iterations: 2 });
                const a5 = annotate($('.underline-gray2'), { type: 'underline', color: '#475569', animationDuration: 500, iterations: 2 });
                const ag = annotationGroup([a1, a2, a3, a4, a5]);
                ag.show();
            }
        }, 500)();
        </script>
        {% endif %}
    </body>
</html>